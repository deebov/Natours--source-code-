      section.section-features.section
        .row
          each className in ['world', 'compass', 'map', 'heart']
            .col.col-1-of-4
              .feature-box
                i(class=`icon-basic-${className} feature-box__icon`)
                h3.heading-tertiary.feature-box__heading Elite tours around the world
                p.paragraph.feature-box__text Lorem ipsum dolor sit, amet consectetur adipisicing elit. Vero odit asperiores earum!

      section.section-tours.section#section-tours
        .u-text-center.u-margin-bottom-80
          h2.heading-secondary Exciting tours for adventurous people
        .row
          each cardInfo in card
            .col.col-1-of-3 
              .card
                .card__side.card__side--front 
                  div(class=`card__picture card__picture--${cardInfo.number}`)
                  h4.card__heading 
                    span(class=`card__heading-span card__heading-span--${cardInfo.number}`) the beatiful places 
                  .card__details
                    ul
                      li 3 day tours
                      li Up to 30 people
                      li 2 tour guides
                      li Sleep in cozy hotels
                div(class=`card__side card__side--back card__side--back--${cardInfo.number}`) 
                  .card__cta
                    .card__price-box
                      .card__price-title Only
                      .card__price-value= cardInfo.price
                    a(href="#popup").btn.btn--white Book now!
        .u-text-center.u-margin-top-80
          a(href="#").btn.btn--green Discover all tours!
      section.section-stories.section
        .bg-video
          video(autoplay loop muted).bg-video__content
            source(src="assets/img/video.webm" type="video/webm")
            source(src="assets/img/video.mp4" type="video/mp4")
        .u-text-center
          h2.heading-secondary.u-margin-bottom-80 We make people genuinely happy
        .row
         .story 
            figure.story__shape
              img(src="assets/img/nat-8.jpg", alt="").story__img

      section.section-book.section
        .row
          .form
            .form__container
              form(action="").form__form
                .u-margin-bottom-40
                  h2.heading-secondary Start booking now
                .form__group
                  input(type="text" placeholder="Full name" id="name" required).form__input
                  label(for="name").form__label Full name
                .form__group.u-margin-bottom-15
                  input(type="email" placeholder="Email address" id="email" required).form__input
                  label(for="email").form__label Email address
                .form__radio-group.u-margin-bottom-15
                  input(type="radio" id="radio-small" name="form-radio").form__radio-input
                  label(for="radio-small").form__radio-label Small tour group
                    span.form__radio-btn
                .form__radio-group.u-margin-bottom-40
                  input(type="radio" id="radio-big" name="form-radio").form__radio-input
                  label(for="radio-big").form__radio-label Big tour group
                    span.form__radio-btn
                .form__group.u-margin-bottom-15
                  button.btn.btn--green.form__btn-submit Next step &rarr;
    footer.footer
      .footer__logo-box
        picture.footer__logo
